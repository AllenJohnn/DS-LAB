#include <stdio.h>
#include <stdlib.h>

#define inf 999

int n, i, j, adj[20][20], visited[20] = {0}, a, b, totcost = 0;
int edges = 0;

int main() {
    printf("------------PRIM'S ALGORITHM--------------\n");
    printf("Enter the Number of Vertices\n");
    scanf("%d", &n);

    printf("Enter the adjacency matrix:\n");
    for (i = 1; i <= n; i++) {
        for (j = 1; j <= n; j++) {
            scanf("%d", &adj[i][j]);
            if (adj[i][j] == 0) {
                adj[i][j] = inf;
            }
        }
    }

    visited[1] = 1;

    while (edges < n - 1) {
        int a = 0, b = 0, min = inf;

        for (i = 1; i <= n; i++) {
            if (visited[i] == 1) {
                for (j = 1; j <= n; j++) {
                    if (visited[j] == 0 && adj[i][j] != inf) {
                        if (adj[i][j] < min) {
                            min = adj[i][j];
                            a = i;
                            b = j;
                        }
                    }
                }
            }
        }

        printf("%d --> %d : cost = %d\n", a, b, min);
        visited[b] = 1;
        edges++;
        totcost = totcost + min;
    }

    printf("Total cost of Spanning Tree = %d", totcost);
}
