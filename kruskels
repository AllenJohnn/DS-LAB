#include <stdio.h>
#include <stdlib.h>

#define inf 999

int n, i, j, adj[20][20], parent[20];
int edges = 0, totcost = 0;

int find(int i) {
    while (parent[i] != i)
        i = parent[i];
    return i;
}

int uni(int i, int j) {
    int a = find(i);
    int b = find(j);
    if (a != b) {
        parent[b] = a;
        return 1;
    }
    return 0;
}

int main() {
    printf("------------KRUSKAL'S ALGORITHM--------------\n");
    printf("Enter the Number of Vertices:\n");
    scanf("%d", &n);

    printf("Enter the adjacency matrix:\n");
    for (i = 1; i <= n; i++) {
        parent[i] = i;  // initialize DSU parent
        for (j = 1; j <= n; j++) {
            scanf("%d", &adj[i][j]);
            if (adj[i][j] == 0)
                adj[i][j] = inf;
        }
    }

    while (edges < n - 1) {
        int a = 0, b = 0, min = inf;

        for (i = 1; i <= n; i++) {
            for (j = 1; j <= n; j++) {
                if (adj[i][j] < min) {
                    min = adj[i][j];
                    a = i;
                    b = j;
                }
            }
        }

        if (uni(a, b)) {
            printf("%d --> %d : cost = %d\n", a, b, min);
            edges++;
            totcost += min;
        }

        adj[a][b] = adj[b][a] = inf; // remove edge so itâ€™s not reused
    }

    printf("Total cost of Spanning Tree = %d", totcost);

    return 0;
}
