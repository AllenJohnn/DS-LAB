#include<stdio.h>

#include<stdlib.h>

#define INF 999

int i,j,adj[10][10],n,visited[10]={0},totcost=0;

int edges=0;

int main()

{

printf("enter the no of vertices: ");

scanf("%d",&n);

printf("enter the adjuscency matrix: ");

for(i=1;i<=n;i++)

{

for(j=1;j<=n;j++)

{

scanf("%d",&adj[i][j]);

if(adj[i][j]==0)

{

adj[i][j]=INF;

}

}

}

printf("\nKRUSKALS METHOD TO FIND MST\n");

while(edges<n-1)

{

int a=0,b=0,min=INF;

for(i=1;i<=n;i++)

{

for(j=1;j<=n;j++)

{

if(adj[i][j]<min)

{

min=adj[i][j];

a=i;

b=j;

}

}

}

printf("\n %d-->%d : cost= %d",a,b,min);

visited[a]=1;

visited[b]=1;

adj[a][b]=adj[b][a]=INF;

edges++;

totcost=totcost+min;

}

printf("\nTotal cost of the spanning tree= %d\n",totcost);

return 0;

}

