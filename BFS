#include<stdio.h>
#include<stdlib.h>
int queue[10];
int visited[10]={0};
int f=-1,r=-1;
int adj[10][10];
int s,i,j,p,n;

void enqueue(int s)
{
if(f==-1)
f++;
r++;
queue[r]=s;
}

int dequeue()
{
if((f==-1)||(f>r))
{
return 0;
}
else
{
p=queue[f];
f++;
return p;

}

}

int bfs(int s,int n)

{

enqueue(s);

visited[s]=1;

p=dequeue();

if(p!=0)

printf("%d\t",p);

while(p!=0)

{

for(i=1;i<=n;i++)

{

if((adj[p][i]==1)&&(visited[i]==0))

{

enqueue(i);

visited[i]=1;

}

}

p=dequeue();

if(p!=0)

printf("%d\t",p);

}

}

void main()

{

int v,n;

printf("Enter The Number Of Vertices: ");

scanf("%d",&n);

printf("Enter The Adjacency Matrix:\n");

for(i=1;i<=n;i++)

{

for(j=1;j<=n;j++)

{

scanf("%d",&adj[i][j]);

}



}

printf("Enter Starting Vertex: ");

scanf("%d",&s);

bfs(s,n);

}
